<!DOCTYPE html>
<html lang="{{ site.language }}">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    {{- include('partials/metatags.html.twig') ~}}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gasoek+One&family=Unbounded:wght@200..900&display=swap" rel="stylesheet">
    {{- include('partials/fontawesome.twig') ~}}
    <style>{{ asset('css/styles.css')|inline }}</style>
    {{- include('partials/pwa.html.twig', {site}, with_context = false) ~}}
    <script src="{{ asset('scripts/hammer.js') }} "></script>
  </head>
  <body class="flex flex-col min-h-screen font-sans antialiased bg-primary text-secondary">
    <header class="max-w-md mx-auto p-5 text-center">
      {%- block header ~%}
      <div class="flex flex-col">
        <a href="{{ site.social.site.url }}">{{ asset('images/logo.svg')|html(attributes={alt: "Logo du site", class: 'inline w-36'}) }}</a>
      </div>
      {%- endblock header ~%}
    </header>
    <main class="w-screen max-w-md flex-grow mx-auto px-5 pb-2">
      {%- import 'macros/fontawesome.twig' as fontawesome ~%}
      {%- block main ~%}
      <div class="p-8 rounded-3xl shadow-md bg-white">
        {%- block content ~%}
        {{ page.content }}
        {%- endblock content ~%}
      </div>
      {%- endblock main ~%}
      {#- install button ~#}
      <div class="flex mt-8 items-center justify-center">
        <button id="install-button" hidden>
          <div class="flex space-x-2 rounded-full bg-[#CEC9C5] text-secondary px-4 py-2">
            <span>{{ fontawesome.icon(name:'download', style:'solid') }}</span>
            <span>Installer lâ€™application</span>
          </div>
        </button>
      </div>
    </main>
  </body>
</html>